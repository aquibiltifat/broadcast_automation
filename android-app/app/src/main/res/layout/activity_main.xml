<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Premium Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="8dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/whatsapp_green">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_launcher"
                    android:padding="8dp"
                    android:contentDescription="App Icon" />

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Group Weaver AI"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WhatsApp Broadcast Extractor"
                    android:textSize="13sp"
                    android:textColor="#B0B0B0"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Stats Cards Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <!-- Lists Found Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                app:cardBackgroundColor="#1A1A2E"
                app:cardCornerRadius="20dp"
                app:strokeWidth="1dp"
                app:strokeColor="#2D2D44"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvListsFound"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="@color/whatsapp_green" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lists Found"
                        android:textSize="13sp"
                        android:textColor="#888888"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Members Found Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                app:cardBackgroundColor="#1A1A2E"
                app:cardCornerRadius="20dp"
                app:strokeWidth="1dp"
                app:strokeColor="#2D2D44"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvMembersFound"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple_accent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Members Found"
                        android:textSize="13sp"
                        android:textColor="#888888"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardServiceStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#1A1A2E"
            app:cardCornerRadius="20dp"
            app:strokeWidth="1dp"
            app:strokeColor="#2D2D44"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

                <!-- Status Items -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp">

                    <!-- Service Status -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/status_dot" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Accessibility Service"
                            android:textSize="14sp"
                            android:textColor="#CCCCCC"
                            android:layout_marginStart="12dp" />

                        <TextView
                            android:id="@+id/tvServiceStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Disabled"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#FF5252" />

                    </LinearLayout>

                    <!-- Backend Status -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/status_dot" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Backend Server"
                            android:textSize="14sp"
                            android:textColor="#CCCCCC"
                            android:layout_marginStart="12dp" />

                        <TextView
                            android:id="@+id/tvBackendStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Checking..."
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#888888" />

                    </LinearLayout>

                    <!-- Contacts Status -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/status_dot" />

                        <TextView
                            android:id="@+id/tvContactsStatus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Contacts"
                            android:textSize="14sp"
                            android:textColor="#CCCCCC"
                            android:layout_marginStart="12dp" />

                        <TextView
                            android:id="@+id/tvContactsLoaded"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="14sp"
                            android:textColor="#888888"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Enable Buttons -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOpenSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enable Accessibility Service"
                    android:layout_marginTop="16dp"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:strokeColor="@color/whatsapp_green"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGrantContacts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Grant Contacts Permission"
                    android:layout_marginTop="8dp"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:strokeColor="@color/purple_accent"
                    app:cornerRadius="12dp"
                    android:visibility="gone" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Main Extraction Button -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStartExtraction"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:text="ðŸš€ Start Auto-Extraction"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                app:backgroundTint="@color/whatsapp_green"
                app:cornerRadius="24dp"
                app:elevation="8dp" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Extraction Progress -->
        <TextView
            android:id="@+id/tvExtractionProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="@color/purple_accent"
            android:textAlignment="center"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <!-- Extraction Steps Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#1A1A2E"
            app:cardCornerRadius="20dp"
            app:strokeWidth="1dp"
            app:strokeColor="#2D2D44"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Extraction Steps"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="16dp" />

                <!-- Step 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/tvStep1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="â—‹"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Opening WhatsApp"
                        android:textSize="14sp"
                        android:textColor="#CCCCCC"
                        android:layout_marginStart="12dp" />

                </LinearLayout>

                <!-- Step 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/tvStep2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="â—‹"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Navigating to Broadcast Lists"
                        android:textSize="14sp"
                        android:textColor="#CCCCCC"
                        android:layout_marginStart="12dp" />

                </LinearLayout>

                <!-- Step 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/tvStep3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="â—‹"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Extracting Members"
                        android:textSize="14sp"
                        android:textColor="#CCCCCC"
                        android:layout_marginStart="12dp" />

                </LinearLayout>

                <!-- Step 4 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/tvStep4"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="â—‹"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Syncing to Backend"
                        android:textSize="14sp"
                        android:textColor="#CCCCCC"
                        android:layout_marginStart="12dp" />

                </LinearLayout>

                <!-- Step 5 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvStep5"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="â—‹"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Complete!"
                        android:textSize="14sp"
                        android:textColor="#CCCCCC"
                        android:layout_marginStart="12dp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Backend Configuration -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#1A1A2E"
            app:cardCornerRadius="20dp"
            app:strokeWidth="1dp"
            app:strokeColor="#2D2D44"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Server Configuration"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Backend URL"
                    app:boxStrokeColor="@color/whatsapp_green"
                    app:hintTextColor="#888888"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etBackendUrl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textUri"
                        android:textColor="@android:color/white" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSaveUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Save URL"
                    android:layout_marginTop="12dp"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:strokeColor="@color/whatsapp_green"
                    app:cornerRadius="12dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Sync Controls -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#1A1A2E"
            app:cardCornerRadius="20dp"
            app:strokeWidth="1dp"
            app:strokeColor="#2D2D44"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manual Sync"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last Sync: "
                        android:textSize="14sp"
                        android:textColor="#888888" />

                    <TextView
                        android:id="@+id/tvLastSync"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Never"
                        android:textSize="14sp"
                        android:textColor="@android:color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSync"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sync Now"
                        android:layout_marginEnd="8dp"
                        app:backgroundTint="@color/purple_accent"
                        app:cornerRadius="12dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnClear"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Clear Data"
                        android:layout_marginStart="8dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:strokeColor="#FF5252"
                        app:cornerRadius="12dp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>
